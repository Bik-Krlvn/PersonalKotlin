<resources>

    <!-- Base application theme. -->
    <!-- Light/Day theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/colorBackgroundLight</item>
        <item name="backgroundColor">@color/colorBackgroundLight</item>
        <item name="textColor">@color/colorPrimaryTextDefaultMaterialLight</item>
        <item name="tintColor">@color/colorTintLight</item>
        <item name="card_backgroundColor">@color/colorCardLight</item>
        <item name="buttonColor">@color/colorButtonLight</item>
        <item name="nav_iconTint">@color/nav_iconTintLight</item>
        <item name="titleTextColor">@color/colorTitleTextLight</item>
        <item name="nav_bg_color">@color/nav_bg_color_Light</item>
        <item name="nav_text_color">@color/nav_text_color_Light</item>
        <item name="dialog_title_color">@color/dialog_title_color_Light</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="materialPrimaryDefaultTextColor">@color/colorPrimaryTextDefaultMaterialLight</item>
        <item name="materialSecondaryDefaultTextColor">@color/colorSecondaryTextDefaultMaterialLight</item>
        <item name="drawableTintColor">@color/colorDrawableTintLight</item>
        <item name="android:windowAnimationStyle">@style/AppThemeAnimation</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
    </style>

    <!-- Dark theme -->
    <style name="AppDarkTheme" parent="Theme.MaterialComponents.Light">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary_DarkMode</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark_DarkMode</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="backgroundColor">@color/colorBackgroundDark</item>
        <item name="android:windowBackground">@color/colorBackgroundDark</item>
        <item name="textColor">@color/colorPrimaryTextDefaultMaterialDark</item>
        <item name="titleTextColor">@color/colorTitleTextDark</item>
        <item name="tintColor">@color/colorTintDark</item>
        <item name="card_backgroundColor">@color/colorCardDark</item>
        <item name="nav_iconTint">@color/nav_iconTintDark</item>
        <item name="buttonColor">@color/colorButtonDark</item>
        <item name="nav_bg_color">@color/nav_bg_color_Dark</item>
        <item name="nav_text_color">@color/nav_text_color_Dark</item>
        <item name="dialog_title_color">@color/dialog_title_color_Dark</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/AppThemeAnimation</item>
        <item name="materialPrimaryDefaultTextColor">@color/colorPrimaryTextDefaultMaterialDark</item>
        <item name="materialSecondaryDefaultTextColor">@color/colorSecondaryTextDefaultMaterialDark</item>
        <item name="drawableTintColor">@color/colorDrawableTintDark</item>
        <item name="alertDialogTheme">@style/alertDialogDarkMode</item>
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>

    </style>

    <style name="AppThemeAnimation">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowEnterTransition">@android:transition/explode</item>
        <item name="android:windowExitTransition">@android:transition/explode</item>
    </style>



    <style name="alertDialogDarkMode" parent="Base.ThemeOverlay.MaterialComponents.Dialog.Alert">
        <item name="android:background">@color/colorPrimary_DarkMode</item>
        <item name="android:textColorPrimary">@android:color/white</item>
    </style>

    <style name="SplashTheme" parent="Theme.MaterialComponents">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>


    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />
</resources>
